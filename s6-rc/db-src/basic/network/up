#!/bin/execlineb -P

# Setup NICs for  Wifi and/or Ethernet

fdmove -c 2 1
if { s6-echo -- [ Network. ] Setting up WiFi & Ethernet... }
export IN_BOOT 1
foreground { echo "Starting networking interfaces..." }
elglob -0 FILES /etc/sysconfig/ifconfig.*
forx INTERFACE { ${FILES} }
 importas -u INTERFACE INTERFACE
 backtick IFACE { pipeline { echo ${INTERFACE} } cut -d . -f 2 }
 importas -nu IFACE IFACE
 /sbin/ifup ${IFACE

s6-echo -- [ Network. ] Ready.
