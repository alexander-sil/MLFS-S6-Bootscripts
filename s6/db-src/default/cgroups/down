#!/bin/execlineb -P

# Unmount CGroups

fdmove -c 2 1

if { s6-echo -- [ CGroups. ] Unmounting ... }
redirfd -r 0 /proc/cgroups
pipeline { s6-tail -n +2 }
pipeline { s6-cut -d"\t" -f1 }
pipeline { s6-grep -vF -- devices }
forstdin -d"\n" -- i
importas -ui i i
if { mountpoint -q /sys/fs/cgroup/${i} }
umount -R /sys/fs/cgroup/${i}

