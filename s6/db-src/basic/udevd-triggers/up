#!/bin/execlineb -P

# Intiate udev devices & subsystems

fdmove -c 2 1

if { s6-echo -- "[ udevd-triggers ] 1/1 : Setting up devices & subsystems..." }
if {
  foreground { udevadm trigger --action=add --type=subsystems }
  foreground { udevadm trigger --action=add --type=devices }
  udevadm settle
}

